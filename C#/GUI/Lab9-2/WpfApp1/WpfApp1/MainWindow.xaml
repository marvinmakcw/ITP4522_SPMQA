<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Grid Layout" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">A</Button>
        <Button Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">B</Button>
        <Button Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1">C</Button>
        <Button Grid.Row="1" Grid.Column="2" Grid.RowSpan="1">D</Button>
        <Button Grid.Row="2" Grid.Column="0" Grid.RowSpan="1">E</Button>
        <Button Grid.Row="2" Grid.Column="1" Grid.RowSpan="1">F</Button>
        <Button Grid.Row="2" Grid.Column="2" Grid.RowSpan="1">G</Button>


    </Grid>
</Window>
