<Window x:Class="WpfApp2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Window1" Height="500" Width="600">
    <Grid>
        <Canvas Height="300" Width="450" Margin="0, 0, 100, 0">

            <Polygon  
    Points="150,100 200,100 200,150 250,150 250,200 150,200"  
    Stroke="Blue"
    StrokeThickness="5">
                <Polygon.Fill>
                    <SolidColorBrush Color="Orange" Opacity="1"/>
                </Polygon.Fill>
            </Polygon>

            <Polygon  
    Points="200,100 200,150 250,150 "  
    Stroke="Black"
    StrokeThickness="5">
                <Polygon.Fill>
                    <SolidColorBrush Color="Red" Opacity="1"/>
                </Polygon.Fill>
            </Polygon>

        </Canvas>
    </Grid>
</Window>
