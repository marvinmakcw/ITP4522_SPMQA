<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MultimediaApplication" Height="500" Width="500" Background="black">
    <Grid>
        <MediaElement Name="myMediaElement1" Source="media/Bear.wmv" 
          LoadedBehavior="Play"   Width="200" Height="100" 
          Margin="0,0,100,200"/>
        <MediaElement Name="myMediaElement2" Source="media/shark.avi" 
          LoadedBehavior="Play"  Width="300" Height="250" 
          Margin="50,200,100,50"/>
        <MediaElement Name="myAudioElement" Source="media/Amanda.wma" 
          LoadedBehavior="Play" />


    </Grid>
</Window>
