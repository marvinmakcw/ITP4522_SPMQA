<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Image" Height="630" Width="420">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" 
BorderBrush="Black" BorderThickness=" 1" >
            <Image Width="150" Source="sampleImages/Creek.jpg" />
        </Border>

        <Border Grid.Row="0" Grid.Column="1" 
BorderBrush="Black" BorderThickness=" 1" >
            <Image Source="sampleImages/Creek.jpg" />
        </Border>
        <Border Grid.Row="2" Grid.Column="0" 
BorderBrush="Black" BorderThickness=" 1" >
            <Image Source="sampleImages/Garden.jpg" Stretch="UniformToFill"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="1" 
BorderBrush="Black" BorderThickness=" 1" >
            <Image Source="sampleImages/Garden.jpg" Stretch="Fill"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="0" 
BorderBrush="Black" BorderThickness=" 1" >
            <Image Source="sampleImages/Garden.jpg" Stretch="None"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="1" 
BorderBrush="Black" BorderThickness=" 1" >
            <Image Source="sampleImages/Garden.jpg" Stretch="Uniform"/>
        </Border>
    </Grid>
</Window>
